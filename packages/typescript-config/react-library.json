// see: https://www.shew.dev/monorepos/guardrails/typescript
// see: https://github.com/anthonyshew/maestros/blob/main/tooling/typescript-config/react-library.json

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "fuf-react-library",
  "extends": "./base.json",
  "compilerOptions": {
    /* Runtime Environment */

    // Include latest ECMAScript features, DOM, and DOM Iterables
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    // Target ES6 for library compatibility
    "target": "ES6",
    // Transform JSX syntax directly to React.createElement calls
    "jsx": "react-jsx"
  }
}
